<header class="sticky-top">
  <nav class="navbar navbar-expand-lg bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">TacticaNote</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" href="/about">About</a>
          </li>
        </ul>
        <ul class="navbar-nav ml-auto">
          <% if current_user %>
            
            <li> <%= link_to "Edit Account", edit_user_registration_path, class: "nav-link" %></li>
            <li> <%= link_to "グループを作成", new_group_path, class: "nav-link" %></li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-turbo="false" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <% if current_user.groups.any? %>
                  <% group = Group.find(@id) %>
                  <%= group.name %>
                <% else %>
                  グループ一覧
                <% end %>
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <% current_user.groups.each do |group| %>
                  <a class="dropdown-item" href="/groups/<%= group.id %>" data-turbo="false"><%= group.name %></a>
                <% end %>
              </div>
            </li>
            <li> <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-outline-primary btn-sm rounded", style:"width: 85px; height: 40px; padding: 0px;" %></li>
          <% else %>
            <li> <%= link_to "Sign Up", new_user_registration_path, "data-turbo": false, class: "nav-link"  %></li>
            <li> <%= link_to "Sign In", new_user_session_path, "data-turbo": false, class: "nav-link"  %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>

