<div class="container mt-5">
  <div class="d-flex align-items-center justify-content-center bg-light">
    <div class="w-100" style="max-width: 32rem;">
      <div class="bg-white shadow rounded p-4">
        <h2 class="h4 font-weight-bold text-center mb-4 text-dark">Edit Profile</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-3">
            <%= f.label :username, class: "form-label small font-weight-medium text-muted mb-1" %>
            <%= f.text_field :username, autofocus: true, autocomplete: "User Name", class: "form-control", placeholder: "Username" %>
          </div>

          <div class="mb-3">
            <%= f.label :email, class: "form-label small font-weight-medium text-muted mb-1" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "you@example.com" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="mb-3">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="mb-3">
            <%= f.label :position, class: "form-label small font-weight-medium text-muted mb-1" %>
            <%= f.select :position,
              [
                ['GK'],
                ['CB'],
                ['RSB'],
                ['LSB'],
                ['DMF'],
                ['CMF'],
                ['RMF'],
                ['LMF'],
                ['OMF'],
                ['RWG'],
                ['LWG'],
                ['CF']
              ],
              { include_blank: 'ポジションを選択してください' },
              { class: 'form-control' }
            %>
          </div>
          
          <!--
          <div class="mb-3">
            <%= f.label :current_password, class: "form-label small font-weight-medium text-muted mb-1" do %>
              現在のパスワード <span class="text-muted small">(プロフィールを更新するには現在のパスワードが必要です)</span>
            <% end %>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, class: "form-label small font-weight-medium text-muted mb-1" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワードを更新する場合のみ記入" %>
            <% if @minimum_password_length %>
              <div class="form-text"><%= @minimum_password_length %> characters minimum</div>
            <% end %>
          </div>

          <div class="mb-4">
            <%= f.label :password_confirmation, class: "form-label small font-weight-medium text-muted mb-1" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワードを更新する場合のみ記入" %>
          </div>
          -->

          <div class="d-flex flex-column flex-sm-row justify-content-between align-items-center">
            <%= f.submit "Update", class: "btn btn-primary w-100 mb-2 mb-sm-0 me-sm-2", style: "max-width: 8rem;", "data-turbo": false %>
            <!-- <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-link text-dark p-0" %> -->
          </div>
        <% end %>

        <div class="mt-4 text-center">
          <% if :back %>
            <%= link_to "Back", :back, class: "text-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
