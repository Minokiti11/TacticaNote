            console.log("Modal close clicked");
            noteModal.style.display = 'none';
            noteModal.style.opacity = '0';
            noteModal.style.visibility = 'hidden';
            noteModal.classList.remove('show');
          });
        }

        // モーダル外クリックで閉じる
        if (noteModal) {
          noteModal.addEventListener('click', (e) => {
            if (e.target === noteModal) {
              noteModal.style.display = 'none';
              noteModal.style.opacity = '0';
              noteModal.style.visibility = 'hidden';
              noteModal.classList.remove('show');
            }
          });
        }

        // 動画選択機能
        let selectedVideoId;
        function selectVideo(element) {
          // すべてのリストアイテムのスタイルをリセット
          document.querySelectorAll('.list-group-item').forEach(item => {
            item.classList.remove('selected');
          });
          
          // クリックされたアイテムの選択状態を切り替え
          if (parseInt(element.getAttribute('data-video-id')) == selectedVideoId) {
            selectedVideoId = null;
            element.classList.remove('selected');
            document.getElementById('create-note-btn').classList.add("disabled");
          } else {
            selectedVideoId = element.getAttribute('data-video-id');
            element.classList.add('selected');
            document.getElementById('create-note-btn').classList.remove("disabled");
          }
        }
        // グローバルに公開（inline onclick 用）
        window.selectVideo = selectVideo;

        // トグルボタンの制御
